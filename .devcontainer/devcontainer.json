{
  "name": "Zephyr_MBT",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--privileged"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/workdir/zephyr-model-based-testing,type=bind",
  "workspaceFolder": "/workdir/zephyr-model-based-testing",
  "customizations": {
    "vscode": {
      "extensions": [
        "tlaplus.vscode-ide",
        "ms-python.python",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "bash /workdir/zephyr-model-based-testing/.devcontainer/setup.sh"
}
